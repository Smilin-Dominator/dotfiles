Config { overrideRedirect = False
       , font     = "xft:Iosevka Nerd Font Mono:size=12"
       , bgColor  = "#CF583A"
       , fgColor  = "#E3C5BB"
       , position = Top
       , commands = [ Run Cpu
                        [ "--template", "CPU: <total>%" 
                        , "-L", "0"
                        , "-H", "80"
                        , "--high"  , "red"
                        , "--normal", "green"
                        ] 10
                    , Run Battery 
                        [ "--template", "Bat: <acstatus>" 
                        , "--Low", "10"
                        , "--"
                        , "--off", "<left>% (<timeleft>)"
                        ] 100
                    , Run Memory 
                        [ "--template", "Mem: <used>/<total> GB (<usedratio>%)"
                        , "-d", "2"
                        , "--"
                        , "--scale", "1024"
                        ] 20
                    , Run Load
                        [ "--template", "Avg: <load1>,<load5>,<load15>"
                        , "-d", "1" 
                        ] 300
                    , Run Date "%a %Y-%m-%d %H:%M:%S" "date" 10
                    ]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = " Devisha's Workstation! }{ %battery% | %cpu% | %load% | %memory% | %date% "
       }
